<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <TextView
        style="@style/text_large_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="These are operators you must use" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_rxjava_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="create"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_rxjava_just"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="just"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_rxjava_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_rxjava_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="map"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/iv_testmap"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_rxjava_flatmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flatmap"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/iv_testflat"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_rxjava_by_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="trigger by manual"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_rxjava_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="thread transfer"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_rxjava_flowable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="flowable"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tv_flowable_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_rxjava_concat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="concat"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_rxjava_merge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="merge"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_rxjava_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zip"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_rxjava_zip_async"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zip异步"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_rxjava_lifecycle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lifecycle(CompositeDisposable with DisposableObserver)"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_rxjava_lifecycle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lifecycle(CompositeDisposable with Consumer)"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_rxjava_lifecycle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lifecycle(RxLifecycle)"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_rxjava_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实例：下载图片并存储、显示"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/iv_example"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_rxjava_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="异常处理"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_rxjava_more"
        style="@style/text_large_black"
        android:text="Click to get more: https://github.com/amitshekhariitbhu/RxJava2-Android-Samples" />

</LinearLayout>